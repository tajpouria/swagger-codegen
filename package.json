{
  "name": "swagger-codegen",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --names 'tsc,copyfiles' -c 'bgBlue.bold,bgCyan.bold' 'lerna run tsc:watch --stream --parallel' 'lerna run copyfiles --stream --parallel'",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "eslint -c .eslintrc.js packages/**/*.ts --fix --quiet"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/swagger-codegen-cli",
      "packages/swagger-codegen-core",
      "packages/utils",
      "packages/plugables/plugins/*",
      "packages/plugables/generators/*",
      "packages/playground"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint -c .eslintrc.js packages/**/*.ts --fix --quiet"
    ]
  }
}
